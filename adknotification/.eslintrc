/**
 * jQuery-style es-linter settings
 */
 {
 	"rules": {

 	/* Common errors */

		"comma-dangle": [ "error", "never"	],
		"no-cond-assign": [ "error" , "except-parens" ],
		"no-console": [ "error", { allow: ["warn", "error"] } ],
		"no-constant-condition": [ "error", { "checkLoops": false } ],
		"no-control-regex": 2,
		"no-debugger": 2,
		"no-dupe-args": 2,
		"no-dupe-keys": 2,
		"no-duplicate-case": 2,
		"no-empty": [ "error" , { "allowEmptyCatch": true } ],
		"no-empty-character-class": 2,
		"no-ex-assign": 2,
		"no-extra-boolean-cast": 2,
		"no-extra-parens": ["error", "all", { "conditionalAssign": false }],
		"no-extra-semi": 2,
		"no-func-assign": 2,
		"no-inner-declarations": 2,
		"no-invalid-regexp": 2,
		"no-irregular-whitespace": 2,
		"no-negated-in-lhs": 2,
		"no-obj-calls": 2,
		"no-prototype-builtins": 2,
		"no-regex-spaces": 2,
		"no-sparse-arrays": 2,
		"no-unexpected-multiline": 2,
		"no-unreachable": 2,
		"no-unsafe-finally": 2,
		"use-isnan": 2,
		"valid-jsdoc": 2,
		"valid-typeof": 2,

		/* Best practice */

		"accessor-pairs": 1,
		"array-callback-return": 2,
		"block-scoped-var": 1,
		"complexity": 1,
		"consistent-return": 1,
		"curly": 1,
		"default-case": [ "error", { "commentPattern": "^skip\\sdefault" } ],
		"dot-location": [ "error", "property" ],
		"dot-notation": [ "error", { "allowKeywords": false } ],
		"eqeqeq": [ "error", "allow-null" ],
		"guard-for-in": 1,
		/*"no-alert": 1,*/
		"no-caller": 2,
		"no-case-declarations": 1,
		"no-div-regex": 1,
		"no-else-return": 1,
		"no-empty-function": 1,
		"no-empty-pattern": 1,
		"no-eq-null": 1,
		"no-eval": 2,
		"no-extend-native": 2,
		"no-extra-bind": 1,
		"no-extra-label": 1,
		"no-fallthrough": 1,
		"no-floating-decimal": 1,
		"no-implicit-coercion": 1,
		"no-implicit-globals": 1,
		"no-implied-eval": 1,
		/*"no-invalid-this": 1, doesnt work with jQuery forEach */
		"no-iterator": 1,
		"no-labels": 1,
		"no-lone-blocks": 1,
		"no-loop-func": 1,
		"no-magic-numbers": [ "error", { "ignore": [ 1 , -1, 0 ] } ],
		"no-multi-spaces": 1,
		"no-multi-str": 1,
		"no-native-reassign": 2,
		"no-new": 1,
		"no-new-func": 1,
		"no-new-wrappers": 1,
		"no-octal": 1,
		"no-octal-escape": 1,
		/*"no-param-reassign": [ "error", { "props": false } ],*/
		"no-proto": 2,
		"no-redeclare": 2,
		"no-return-assign": 1,
		"no-script-url": 2,
		"no-self-assign": 1,
		'no-self-compare': 1,
		"no-sequences": 1,
		"no-throw-literal": 1,
		"no-unmodified-loop-condition": 1,
		"no-unused-expressions": [ "error", { "allowShortCircuit": true, "allowTernary": true } ],
		"no-unused-labels": 1,
		"no-useless-call": 1,
		"no-useless-concat": 1,
		"no-useless-escape": 1,
		/*"no-void": 1,*/
		"no-warning-comments": 1,
		"no-with": 2,
		"radix": 1,
		"vars-on-top": 1,
		"wrap-iife": [ "error", "any" ],
		/*"yoda": [ "error", "never", { "onlyEquality": true } ],*/

		/* Vars */

		/*"init-declarations": [ "error", "always" ],*/
		"no-catch-shadow": 1,
		"no-delete-var": 2,
		"no-label-var": 1,
		"no-shadow": 1,
		"no-shadow-restricted-names": 2,
		"no-undef-init": 1,
		/*"no-undefined": 1,*/
		"no-undef": [ "error", { "typeof": true } ],
		"no-unused-vars": ["error", {"args": "after-used", "caughtErrors": "none" } ],
		/*"no-use-before-define": 1,*/

		/* Styling */

		"array-bracket-spacing": [ 1, "always", { "objectsInArrays": false, "arraysInArrays": false } ],
		"block-spacing": 1,
		"brace-style": 1,
		"camelcase": 2,
		"comma-spacing": [ "error", { "before": false, "after": true } ],
		"comma-style": 1,
		/*"consistent-this": [ "error", "klass" ],*/
		"eol-last": 2,
		"func-names": 1,
		"indent": [ "error", "tab", { "SwitchCase": 1, "VariableDeclarator": 1 } ],
		"jsx-quotes": [ "error", "prefer-double" ],
		"key-spacing": [ "error", { "beforeColon": false, "afterColon": true, "align": "value" } ],
		"lines-around-comment": [
			"error",
			{
				"beforeBlockComment": true,
				"beforeLineComment": true,
				"allowBlockStart": true,
				"allowObjectStart": true,
				"allowArrayStart": true
			}
		],
		"max-depth": [ "error", 4 ],
		"max-len": [ 1, 100, 4, { "ignorePattern": "" } ],
		"max-nested-callbacks": [ 1, 3 ],
		"max-params": [ 1, 5 ],
		/*"max-statements": [ 1, 10, { "ignoreTopLevelFunctions": true } ],*/
		"max-statements-per-line": [ 1, { "max": 1 } ],
		"new-cap": 2,
		"new-parens": 2,
		"newline-after-var": [ 1, "always" ],
		"newline-before-return": 1,
		"newline-per-chained-call": 2,
		"no-array-constructor": 2,
		"no-bitwise": ["error", { "int32Hint": true } ],
		"no-lonely-if": 1,
		"no-mixed-spaces-and-tabs": [ 1, "smart-tabs" ],
		"no-multiple-empty-lines": [ 1, { "max": 2 } ],
		"no-negated-condition": 1,
		"no-nested-ternary": 1,
		"no-new-object": 2,
		"no-spaced-func": 1,
		"no-trailing-spaces": 1,
		/*"no-underscore-dangle": 1,*/
		"no-unneeded-ternary": 1,
		"no-whitespace-before-property": 1,
		"object-curly-spacing": [ 1, "always" ],
		"object-property-newline": 1,
		"one-var": 1,
		"one-var-declaration-per-line": [ 1, "initializations" ],
		"operator-assignment": [ 1, "always" ],
		"operator-linebreak": [ "error", "after" ],
		/*"padded-blocks": [ 1, "always" ],*/
		"quote-props": [ "error", "as-needed", { "keywords": true, "unnecessary": false } ],
		"quotes": [ 2 , "single" ],
		"require-jsdoc": 2,
		"semi": [ 1, "always" ],
		"semi-spacing": [ "error", { "before": false, "after": true } ],
		"sort-vars": 1,
		"space-before-blocks": 2,
		"space-before-function-paren": [ "error", "never" ],
		"space-infix-ops": [ "error", { "int32Hint": false } ],
		"space-unary-ops": [ 2, { "words": true, "nonwords": false, "overrides": { "!": true } } ],
		"spaced-comment": [ "error", "always" ],
		"wrap-regex": 1,
		"keyword-spacing": 1
	}
 }
